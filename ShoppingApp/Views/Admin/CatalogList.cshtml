
@{
    ViewData["Title"] = "CatalogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model CatalogListModel

<h3>Catalog</h3>
<hr />
<br />
<div class="card">
    <div class="card-header">
        Categories
    </div>
    <table class="table-bordered table">
        <thead>
            <tr>
                <th>#</th>
                <th scope="col">Category ID</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (var item in Model.Categories)
            {
                { i++; }
                <tr>
                    <td>@i</td>
                    <td>@item.CategoryName</td>
                    <td>
                        <a class="btn btn-primary btn-sm form-control" asp-controller="Admin" asp-action="EditCategory" asp-route-id="@item.CategoryID">Edit</a>
                    </td>
                    <td>
                        <button class="btn btn-danger form-control btn-sm">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="card-footer">
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCategoryModal">Create</button>
    </div>
</div>

<hr />

<div class="card mb-5">
    <div class="card-header">
        Products
    </div>
        <table class="table-striped table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Is Approved</th>
                    <th>Is Home</th>
                    <th>Is Featured</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @{int k = 0;}
                @foreach (var item in Model.Products)
                {
                    { k++; }
                <tr>
                    <td>@k</td>
                    <td><img src="~/images/products/tn/@item.Image" width="60px" height="60px" /></td>
                    <td>@item.ProductName</td>
                    <td>@item.DateAdded</td>
                    <td>
                        @if (item.IsApproved)
                        {
                            <i class="far text-primary fa-check-square fa-3x"></i>
                        }
                        else
                        {
                            <i class="far text-danger fa-times-circle fa-3x"></i>
                        }
                    </td>
                    <td>
                        @if (item.IsHome)
                        {
                            <i class="far text-primary fa-check-square fa-3x"></i>
                        }
                        else
                        {
                            <i class="far text-danger fa-times-circle fa-3x"></i>
                        }
                    </td>
                    <td>
                        @if (item.IsFeatured)
                        {
                            <i class="far text-primary fa-check-square fa-3x"></i>
                        }
                        else
                        {
                            <i class="far text-danger fa-times-circle fa-3x"></i>
                        }

                    </td>
                    <td>
                        <button class="btn btn-primary form-control btn-sm">Edit</button>
                    </td>
                    <td>
                        <button class="btn btn-danger form-control btn-sm">Delete</button>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    <div class="card-footer">
        <a class="btn btn-primary" asp-controller="Admin" asp-action="AddProduct">Create</a>

        <partial name="_addCategoryForm" model=" new Category()" />

    </div>
</div>

@section scripts {
<script>

    $("#addCategory").submit(function (event) {

        event.preventDefault();
        var form = $(this);

        var token = $('input[name="__RequestVerificationToken"]', form).val();
        var data = { categoryName: $("#CategoryName").val() };
        var dataWithToken = $.extend(data, { '__RequestVerificationToken': token });


        $.ajax({
            url: form.attr("action"),
            type: "POST",
            data: dataWithToken,
            beforeSend: function () {
                $("#ajax-loader").show();
            },
            complete: function () {
                $("#ajax-loader").hide();
            },

            success: function (data) {
                console.log(data);
                $("#addCategoryModal").modal('hide');
            },
            error: function () {
               
            }
            

        });
    })
</script>
}



