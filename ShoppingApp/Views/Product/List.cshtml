@{
    ViewData["Title"] = "Home Page";
}

@model ProductListModel

<section id="content">

    <section id="shop" class="container">

        <div class="row">

            <!-- sidebar start -->
            <div id="sidebar" class="col-md-3">

                @await Component.InvokeAsync("Search")

                @await Component.InvokeAsync("CategoryMenu")

                @await Component.InvokeAsync("FeaturedProducts")

            </div>
            <!-- sidebar end -->
            <!-- right column start -->
            <div class="col-md-9">

                <div class="row">

                    <div class="col-md-12 wow fadeIn">
                        <div class="row product-results">
                            <div class="product-results">
                                <div class="col-xs-8">
                                    <p class="woocommerce-result-count">Total : @Model.PagingInfo.TotalItems products.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    @foreach (var product in Model.Products)
                    {
                          <partial name="_ProductItem" model=product />
                    }
                </div>

                <div page-model="@Model.PagingInfo" page-action="List"></div>
            </div>
            <!-- right column end -->
        </div>
    </section>
</section>
